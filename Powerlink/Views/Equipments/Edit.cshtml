@model Powerlink.Equipment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="login  create-box col-md-6 col-sm-6 col-xs-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <p class="create-text">Edit Equipment</p>
            <br>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group form-adjust">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Eqp_Name, new { htmlAttributes = new { Placeholder = "Equipment Name", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Eqp_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-adjust">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Eqp_Category, new { htmlAttributes = new { Placeholder = "Equipment Category", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Eqp_Category, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-adjust">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Eqp_Price, new { htmlAttributes = new { Placeholder = "Equipment Price", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Eqp_Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-adjust">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Eqp_Quantity, new { htmlAttributes = new { Placeholder = "Equipment Quantity", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Eqp_Quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-adjust">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Eqp_Description, new { htmlAttributes = new { Placeholder = "Equipment Description", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Eqp_Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<div class="login b-to-list col-md-6 col-sm-6 col-xs-6">
    @Html.ActionLink("Back to List", "Index")
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
